<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
  <id>@app-id@</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <name>Valuta</name>
  <summary>Convert between currencies</summary>
  <description>
    <p>Valuta is a simple and fast conversion tool, ideal for those who need to convert between different currencies repeatedly. Use it while traveling, budgeting, or anytime else you need to quickly convert between two currencies.</p>
  </description>
  <launchable type="desktop-id">@app-id@.desktop</launchable>
  <url type="homepage">https://github.com/ideveCore/valuta</url>
  <url type="bugtracker">https://github.com/ideveCore/valuta/issues</url>
  <url type="vcs-browser">https://github.com/ideveCore/valuta</url>
  <url type="translate">https://hosted.weblate.org/engage/currency-converter/</url>
  <url type="donation">https://ko-fi.com/idevecore</url>
  <releases>
    <release version="1.3.0" date="2024-07-05">
      <description translate="no">
        <p>In this version we bring:</p>
        <ul>
          <li>Redesign of the app.</li>
          <li>Changes in the search provider..</li>
          <li>Translation updates.</li>
          <li>Added new providers.</li>
        </ul>
      </description>
    </release>
    <release version="1.2.0" date="2024-01-20">
      <description translate="no">
        <p>In this version we bring:</p>
        <ul>
          <li>New ui;</li>
          <li>Modified the search format to "{currency_value} {from_currency} {prefix[to|&gt;|para|...]} {to_currency}";</li>
          <li>From now on, the translations of the application will be carried out through Weblate;</li>
        </ul>
      </description>
    </release>
    <release version="1.1.0" date="2023-08-14">
      <description translate="no">
        <p>In this version we bring:</p>
        <ul>
          <li>New ui;</li>
          <li>Fixes bugs;</li>
          <li>Fixes typo errors;</li>
          <li>New language (Brazilian portuguese);</li>
          <li>Added integration with shell gnome search provider;</li>
          <li>Added country flags;</li>
          <li>Added currencies symbols(supports just latim symbols);</li>
        </ul>
      </description>
    </release>
    <release version="1.0.0" date="2023-07-14">
      <description translate="no">
        <p>Currency Converter 1.0.0: Application launch</p>
      </description>
    </release>
  </releases>
  <requires>
    <display_length compare="ge">400</display_length>
  </requires>
  <recommends>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </recommends>
  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/ideveCore/valuta/main/data/screenshots/01.png</image>
    </screenshot>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/ideveCore/valuta/main/data/screenshots/02.png</image>
    </screenshot>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/ideveCore/valuta/main/data/screenshots/03.png</image>
    </screenshot>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/ideveCore/valuta/main/data/screenshots/04.png</image>
    </screenshot>
  </screenshots>
  <developer_name>Ideve Core</developer_name>
  <content_rating type="oars-1.0" />
  <provides>@app-id@.desktop</provides>
</component>

