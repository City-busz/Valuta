<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="currencyconverter">
  <schema id="@app-id@" path="/io/github/idevecore/CurrencyConverter/">
    <key name="color-scheme" type="s">
      <choices>
        <choice value="default"/>
        <choice value="light"/>
        <choice value="dark"/>
      </choices>
      <default>'light'</default>
      <summary>Color Scheme</summary>
      <description>Use the light or dark variant of the GTK theme</description>
    </key>
    <key name="providers" type="i">
      <default>0</default>
    </key>
    <key name="width" type="i">
			<default>420</default>
		</key>
		<key name="height" type="i">
			<default>600</default>
		</key>
		<key name="is-maximized" type="b">
			<default>false</default>
		</key>
		<key name="is-fullscreen" type="b">
			<default>false</default>
		</key>
    <key type="s" name="src-currency">
        <default>'USD'</default>
    </key>
    <key type="s" name="dest-currency">
        <default>'EUR'</default>
    </key>
  </schema>
</schemalist>

